# =============================================================================
# Koramangala Environmental Monitoring System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# API Keys - Data Collection
# =============================================================================

# Air Quality Monitoring (AQICN)
# Get your key from: https://aqicn.org/data-platform/token/
AQICN_API_KEY=your_aqicn_api_key_here

# Weather Data (OpenWeather)
# Get your key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Maps (Traffic & Routing)
# Get your key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twitter/X API (Social Media Sentiment)
# Get your keys from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Google Earth Engine
# Setup: https://developers.google.com/earth-engine/guides/python_install
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GEE_PROJECT_ID=your_gee_project_id

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (Time-series data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=koramangala_env_monitoring
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# MongoDB (Unstructured data, satellite imagery metadata)
MONGO_URI=mongodb://localhost:27017/
MONGO_DB=koramangala_env
MONGO_USER=admin
MONGO_PASSWORD=your_mongo_password_here

# Redis (Caching and real-time data)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# ML Model Configuration
# =============================================================================

# Model Paths
MODEL_CHECKPOINT_DIR=./data/models/
PRETRAINED_MODEL_PATH=./data/models/pretrained/
CACHE_DIR=./data/cache/
LOG_DIR=./logs/

# Model Training
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=100
EARLY_STOPPING_PATIENCE=10

# Device Configuration
DEVICE=cuda  # cuda or cpu
NUM_WORKERS=4

# =============================================================================
# Streamlit Dashboard Configuration
# =============================================================================

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# Geographic Configuration
# =============================================================================

# Koramangala Bounding Box
BBOX_NORTH=12.9485
BBOX_SOUTH=12.9219
BBOX_EAST=77.6394
BBOX_WEST=77.6096

# Center Point
CENTER_LAT=12.9352
CENTER_LON=77.6245

# =============================================================================
# Data Collection Configuration
# =============================================================================

# Collection Intervals (in minutes)
AIR_QUALITY_INTERVAL=15
WEATHER_INTERVAL=30
TRAFFIC_INTERVAL=10
SATELLITE_INTERVAL=1440  # Daily
SOCIAL_MEDIA_INTERVAL=60

# Data Retention (in days)
RAW_DATA_RETENTION=90
PROCESSED_DATA_RETENTION=365
MODEL_PREDICTION_RETENTION=30

# =============================================================================
# Alert Configuration
# =============================================================================

# Alert Thresholds
AQI_THRESHOLD_WARNING=100
AQI_THRESHOLD_CRITICAL=150
PM25_THRESHOLD_WARNING=55
PM25_THRESHOLD_CRITICAL=150

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
ALERT_EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_SMS_RECIPIENTS=+919876543210,+919876543211

# =============================================================================
# Logging & Monitoring
# =============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Weights & Biases (Experiment Tracking)
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=koramangala-env-monitoring
WANDB_ENTITY=your_wandb_username

# =============================================================================
# Deployment Configuration
# =============================================================================

# Docker
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your_docker_username
DOCKER_IMAGE_NAME=koramangala-env-monitor
DOCKER_IMAGE_TAG=latest

# Application
APP_NAME=Koramangala Environmental Monitor
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
DEBUG=True

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_REAL_TIME_COLLECTION=True
ENABLE_MODEL_TRAINING=True
ENABLE_PREDICTIONS=True
ENABLE_ANOMALY_DETECTION=True
ENABLE_ALERTS=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_SATELLITE_DATA=True
ENABLE_SOCIAL_MEDIA_ANALYSIS=False
